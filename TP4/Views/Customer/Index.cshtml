@model List<TP4.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No customers found.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Subscribed</th>
                <th>Membership</th>
                <th>Discount (%)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FullName</td>
                    <td>@(customer.IsSubscribed ? "Yes" : "No")</td>
                    <td>@customer.Membership?.TypeName</td>
                    <td>@customer.Membership?.Discount</td>
                </tr>
            }
        </tbody>
    </table>
}
