@model TP3.Models.Genres

@{
    ViewData["Title"] = "Delete Genre";
}

<div class="container mt-4">
    <h2>Delete Genre</h2>
    <hr />

    <div class="alert alert-warning">
        <h5>
            <i class="bi bi-exclamation-triangle-fill"></i> Warning!
        </h5>
        <p>
            Are you sure you want to delete this genre? This action cannot be undone.
        </p>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Genre ID:</dt>
                <dd class="col-sm-9"><code>@Model.Id</code></dd>

                <dt class="col-sm-3">Genre Name:</dt>
                <dd class="col-sm-9">@Model.GenreName</dd>

                <dt class="col-sm-3">Associated Movies:</dt>
                <dd class="col-sm-9">
                    @if (Model.Movies != null && Model.Movies.Any())
                    {
                        <span class="text-danger">@Model.Movies.Count() movie(s) associated</span>
                        <ul>
                            @foreach (var movie in Model.Movies.Take(5))
                            {
                                <li>@movie.Name (@movie.Year)</li>
                            }
                            @if (Model.Movies.Count > 5)
                            {
                                <li><em>...and @(Model.Movies.Count - 5) more</em></li>
                            }
                        </ul>
                        <p class="text-muted">
                            You cannot delete this genre until you remove these movies or change their genres.
                        </p>
                    }
                    else
                    {
                        <span class="text-success">No movies associated.</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    @* Only show delete button if no associated movies *@
    @if (Model.Movies == null || !Model.Movies.Any())
    {
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Yes, Delete Genre
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    }
    else
    {
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    }
</div>
