@model Genres

@{
    ViewData["Title"] = "Create Genre";
}

<h2>Create Genre</h2>

<form asp-action="Create" method="post">
    <!-- Display validation errors -->
    @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
    {
        <div class="text-danger">
            <ul>
                @foreach (string error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <div class="form-group">
        <label asp-for="GenreName" class="control-label"></label>
        <input asp-for="GenreName" class="form-control" />
        <span asp-validation-for="GenreName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Add Genre" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
