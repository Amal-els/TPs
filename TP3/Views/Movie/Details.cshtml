@model TP3.Models.Movies
@{
    ViewData["Title"] = "Détails du Film";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            
            <!-- Movie Image -->
            @if (!string.IsNullOrEmpty(Model.ImageFile))
            {
                <div class="col-md-4">
                    <img src="@Model.ImageFile" class="img-fluid rounded-start" alt="@Model.Name" />
                </div>
            }

            <!-- Movie Details -->
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title display-5 mb-3">@Model.Name</h2>
                    <p class="card-text"><strong>ID:</strong> @Model.Id</p>
                    <p class="card-text"><strong>Month:</strong> @Model.Month</p>
                    <p class="card-text"><strong>Year:</strong> @Model.Year</p>
                    <p class="card-text"><strong>Genre:</strong> @Model.Genres?.GenreName</p>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="bi bi-pencil-square me-1"></i> Editer
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
