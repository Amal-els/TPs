@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movies List";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    string sortOrder = ViewBag.SortOrder;
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Movie</a>
</p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@(ViewData["NameSortParm"])">
                    Name
                    @if(sortOrder == "name_desc") { <span>&darr;</span> } else { <span>&uarr;</span> }
                </a>
            </th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.Genre?.Name ?? "No Genre"</td>
            <td>
                <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        @for(int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-sortOrder="@sortOrder">@i</a>
            </li>
        }
    </ul>
</nav>
